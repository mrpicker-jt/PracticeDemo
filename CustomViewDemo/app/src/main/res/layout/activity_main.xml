<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <Button
        android:id="@+id/center_cancelable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DialogCenterCanCancel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/center_cancel_disable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DialogCenterNotCancel"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/bottom_not_cancel"
        android:layout_alignLeft="@+id/bottom_not_cancel"
        android:layout_alignStart="@+id/bottom_not_cancel" />

    <Button
        android:id="@+id/bottom_not_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bottom_cancel"
        android:layout_alignStart="@+id/bottom_cancel"
        android:layout_below="@+id/bottom_cancel"
        android:layout_marginTop="19dp"
        android:text="DialogBottomNotCancel" />

    <Button
        android:id="@+id/bottom_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/center_cancelable"
        android:layout_alignStart="@+id/center_cancelable"
        android:layout_below="@+id/center_cancelable"
        android:layout_marginTop="11dp"
        android:text="DialogBottomCanCancel" />
</RelativeLayout>
